							<show_in_store>1</show_in_store>
							<depends><enable>1</enable><type>recaptcha</type><theme>invisible</theme></depends>
						</position>
						<font>
							<depends>
								<type>zend</type>
							</depends>
						</font>
						<timeout>
							<depends>
								<type>zend</type>
							</depends>
						</timeout>
						<length>
							<depends>
								<type>zend</type>
							</depends>
